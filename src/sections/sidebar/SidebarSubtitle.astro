---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div class="flex space-x-4 justify-center items-center mb-2">
    <div class="w-3 h-0.5 bg-slate-800"></div>
    <h4 class="text-center text-sm uppercase font-semibold text-slate-800">
        {title}
    </h4>
    <div class="w-3 h-0.5 bg-slate-800"></div>
</div>
